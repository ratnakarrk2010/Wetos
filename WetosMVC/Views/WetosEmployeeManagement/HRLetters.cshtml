          <div class="row">
            <div class="editor-label col-md-2">
                Select Employee
             </div>
        <div class="editor-field col-md-5">
              @Html.DropDownListFor(a => a.EmployeeId, (IEnumerable<SelectListItem>)@ViewBag.EmployeeList, "Select", new { @class = "form-control select2" }) @*multiselect", @multiple = "multiple", id = "selectemployee" }) *@
