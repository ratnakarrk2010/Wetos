            @Html.RadioButtonFor(model => model.SelectedLetter, 1, new { @name = "Report" }) Appointment Letter @*Checked = "checked",*@
            </div>

              <div class="row">
             @Html.RadioButtonFor(model => model.SelectedLetter, 6, new { @name = "Report" }) Service Agreement - Bond
            </div>

             <div class="row">
             @Html.RadioButtonFor(model => model.SelectedLetter, 2, new { @name = "Report" }) Confirmation Letter Without Increment
            </div>

             <div class="row">
             @Html.RadioButtonFor(model => model.SelectedLetter, 3, new { @name = "Report" }) Confirmation Letter With Increment
            </div>

             <div class="row">
             @Html.RadioButtonFor(model => model.SelectedLetter, 4, new { @name = "Report" }) Relieving Letter
            </div>

             <div class="row">
             @Html.RadioButtonFor(model => model.SelectedLetter, 5, new { @name = "Report" }) Experience Letter
            </div>

            </div>
            </div>
            <br />

            <div class="row">
            <button type="submit" id="Export" name="Export" value="1" class="btn btn-primary"  data-toggle="tooltip" title="Click to Generate HR Letter">Generate</button>
            </div>

            </div>
            </div>
            </section>
}            
            
