@model WetosDB.DeclaredHoliday

@{
    ViewBag.Title = "Delete";
}

<div class="page-content-wrapper" id="page_content">
    <div class="page-content">

 <legend>Declared HoliDay</legend>


<div class="row">
<div class="col-xs-12 col-md-12 col-lg-12">         
<div class="box">
<div class="box-header">           
</div>
<div class="box-body">
@using (Html.BeginForm("Delete", "WetosDeclaredHoliday", FormMethod.Post, new { id = "Form" }))
{

   
    
     <div class="row">
    <div class="display-label col-md-4">Declared Holiday Date</div>
    <div class="display-field col-md-6">@String.Format("{0:g}", Model.HolidayDate)</div>
     </div> 

    <div class="row">
    <div class="display-label col-md-4">Description</div>
    <div class="display-field col-md-6">@Model.Description</div>
     </div> 



<p>
   <input type="button" id="BtnDel" value="Delete" style="cursor:pointer; float:left" title = "Click to delete Holiday" class="btn btn-default" />
      <span  class="btn btn-default" style="cursor:pointer; float:left; margin-left:10px" title = "Click to go back to Holiday list">@Html.ActionLink("Back to Holiday list", "Index")</span>
   
</p>
    
}

</div>
</div>
</div>
</div>
    </div>
</div>

<div id="Hldiv" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                Do you want to delete Holiday?
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="col-md-2  btn btn-primary" id="btn">
                    Yes</button>
                <button type="button" data-dismiss="modal" class="col-md-2 btn">
                    Cancel</button>
            </div>
        </div>
    </div>
</div>

<script type="text/jscript">
    $(document).ready(function () {
        $('.back').click(function () {
            parent.history.back();
            return false;
        });
    });

    function goBack() {
        window.history.back();
    }

    //ADDED CODE BY RAJAS ON 29 MARCH 2017 FOR ALERT POPUP START
    $("#BtnDel").click(function () {

        var $form = $(this).closest('form');
        $('#Hldiv').modal({ backdrop: 'static', keyboard: false })
                .one('click', '#btn', function () {

                    $("#Form").submit();
                });

    });
    //ADDED CODE BY RAJAS ON 29 MARCH 2017 FOR ALERT POPUP END

</script>

@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
 }
