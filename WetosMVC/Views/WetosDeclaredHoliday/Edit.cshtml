        //alert($("#Application_ID").val());
        isDirty = false;
        var companyid = $("#CompanyddlList").val();
        alert(companyid);
        $.ajax({
            url: '@Url.Content("~/WetosHoliday/GetBranch")',
            type: "POST",
            dataType: "json",
