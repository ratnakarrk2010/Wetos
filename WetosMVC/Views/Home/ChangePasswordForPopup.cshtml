@model WetosMVCMainApp.Models.ChangePasswordModel
@{var httpContext = HttpContext.Current;
  System.Web.Mvc.UrlHelper Url = new System.Web.Mvc.UrlHelper(httpContext.Request.RequestContext);}
<div class="modal-body">

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @using (Html.BeginForm("ChangePasswordForPopup", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.", new { style = "font-size:15px;color:Red" })
        <div class="login-box">
            <a href="#" style="font-size: 20px"><b>Change Password</b></a>
            <!-- /.login-logo -->
            <div class="login-box-body">
                <div>
                    <fieldset>
                        @*<p class="login-box-msg btn btn-block btn-social btn-facebook btn-flat" style="text-align: center;
                            padding-top: 8px; font-size: 17px; font-weight: bold; height: 40px">
                            Account Information
                        </p>
                        <br />*@
                        <div class="form-group has-feedback">
                            <text>Old Password</text>
                        </div>
                        <div class="form-group has-feedback">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Enter Old Password", style = "width:320px" })<span
                                class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.OldPassword, "", new { style = "font-size:12px;color:Red" })
                        <div class="form-group has-feedback">
                            <text>New Password</text>
                        </div>
                        <div class="form-group has-feedback">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Enter New Password", style = "width:320px" })<span
                                class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { style = "font-size:12px;color:Red" })
                        <div class="form-group has-feedback">
                            <text>Confirm Password</text>
                        </div>
                        <div class="form-group has-feedback">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Enter Confirm Password", style = "width:320px" })<span
                                class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { style = "font-size:12px;color:Red" })
                        <div class="row">
                            <input type="button" value="Change Password" class="col-md-6 col-md-offset-1 btn btn-primary" />
                            <div class="col-md-1">
                            </div>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">
                                Cancel</button>
                        </div>
                        @*<input type="submit" value="Change Password" />*@
                    </fieldset>
                </div>
            </div>
            <!-- /.login-box-body -->
        </div>
       
@* <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Cancel</button>
                <button type="submit" id="approve-btn" class="btn btn-danger">
                    Save</button>
            </div>
        </div>*@
    }
</div>
