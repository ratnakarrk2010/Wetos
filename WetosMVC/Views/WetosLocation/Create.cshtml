@model WetosMVCMainApp.Models.LocationModel
@{
    ViewBag.Title = "Location Master Create";
}
<link href="~/Content/css/wetoslocation_create.css" rel="stylesheet" />
<link href="~/Content/allcss/allcss.css" rel="stylesheet" />

<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">

            <div class="row page-breadcrumb breadcrumb ed_breadcrumb ed_breadcrumb_row">
                <div class="col-sm-6 ed_breadcrumb_div">
                    <ul>
                        <li class="li_margin1">
                            <img src="~/Content/images/icon/home_1.png" class="home_width_height" />
                            <a href="@Url.Action("Index", "Home")">Home</a><i class="fa fa-angle-right m_padding_top_3"></i>

                        </li>
                        <li class="li_margin"><a href="#">Masters </a> <i class="fa fa-angle-right"></i> </li>

                        <li class="li_margin"> <a href="@Url.Action("Index", "WetosLocation")">Location</a></li>
                    </ul>
                </div>
                <div class="col-sm-6">
                    <ul style="float: right;">
                        <li class="">
                            <div id="dashboard-report margin_left" data-toggle="tooltip" title="Today's date">
                                <img src="~/Content/images/icon/imageedit_42.png" class="icon_width_height" />
                                <span>
                                    @DateTime.Now.ToLongDateString()
                                </span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="page-title">
                        <i style="text-shadow: -3px 0px 4px #6f88a2; ">Location Master </i><small>Create</small>
                        <span style="float:right;font-weight:800" onclick="OnLocationMasterClick(); ">

                            @Html.ActionLink(" ", "Create", new { }, new { @class = "fa fa-plus-circle", title = "Add Location", style = "color:#428bca;font-size:19px" })
                        </span>
                    </h1>
                </div>
            </div>
            <div style="clear: both;"></div>

            @*Added by Pushkar For back breadcrumb on 24 OCT 2016-----------End*@
        </section>
        <section class="content">
            <div class="row">
                <div class="col-xs-12 col-md-12 col-lg-12">

                    <div class="box">

                        <!-- /.box-header -->
                        <div class="box-body">
                            @using (Html.BeginForm("Create", "WetosLocation", FormMethod.Post, new { id = "LocationForm" }))
                            {
                                @Html.ValidationSummary(true)
                                <fieldset>


                                    <div style="color: Red; font-size: 12px">
                                        @Html.ValidationMessage("Error")
                                    </div>


                                    <div class="row">
                                        <div class="editor-label col-md-2">
                                            Location Name<span style="color:Red;font-size:18px">*</span>
                                        </div>
                                        <div class="editor-field col-md-5">
                                            <div class="input-group date">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-map-marker"></i>
                                                </div>
                                                @Html.EditorFor(model => model.LocationName)
                                            </div>


                                            <div class="div_error" style="color: Red; font-size: 12px">
                                                @Html.ValidationMessageFor(model => model.LocationName)
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="editor-label col-md-2">
                                            Address
                                        </div>
                                        <div class="editor-field col-md-5">
                                            <div class="input-group date">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-home"></i>
                                                </div>
                                                @Html.TextAreaFor(model => model.Address)
                                            </div>
                                            <div class="div_error" style="color: Red; font-size: 12px">
                                                @Html.ValidationMessageFor(model => model.Address)
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="editor-label col-md-2">
                                            City
                                        </div>
                                        <div class="editor-field col-md-5">
                                            <div class="input-group date">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-building" aria-hidden="true"></i>
                                                </div>

                                                @Html.EditorFor(model => model.City)


                                            </div>
                                        </div>

                                    </div>

                                    <p class="btn_margin_left">
                                        <input type="button" id="locationbtn" value="Create" class="btn btn-default blue" style="cursor:pointer; float:left" title="Click to save location" />
                                        <span class="btn btn-default" style="cursor:pointer; float:left; margin-left:10px" title="Click to go back to location list">@Html.ActionLink("Back to Location list", "Index")</span>
                                    </p>
                                </fieldset>
                            }

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
            <!-- /.box -->
            <!-- /.col -->
            <!-- /.row -->
        </section>
    </div>
</div>
@*ADDED CODE BY RAJAS ON 28 MARCH 2017 FOR ALERT POPUP START*@
<div id="locationdiv" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                Do you want to add new location?
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="col-md-2  btn btn-primary" id="DeleteBtn">
                    Yes
                </button>
                <button type="button" data-dismiss="modal" class="col-md-2 btn">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>
@*ADDED CODE BY RAJAS ON 28 MARCH 2017 FOR ALERT POPUP END*@ @*Added by Pushkar For back breadcrumb on 24 OCT 2016-------start*@
