    $(document).ready(function () {

        $('.back').click(function () {

            parent.history.back();
            return false;

        });
    });

    function goBack() {

        window.history.back();

    }

    //ADDED CODE BY RAJAS ON 28 MARCH 2017 FOR ALERT POPUP START
