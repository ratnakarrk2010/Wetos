        var $form = $(this).closest('form');

        $('#locationdiv').modal({ backdrop: 'static', keyboard: false })
            .one('click', '#DeleteBtn', function () {

                //ADDED CODE BY SHALAKA ON 21 JUNE 2017 FOR PROGRESS RING
                //showloading();

                $("#LocationForm").submit();
            });

    });
