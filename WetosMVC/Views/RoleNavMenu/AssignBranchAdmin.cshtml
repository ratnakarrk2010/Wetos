@model WetosMVCMainApp.Models.AssignHRManagerModel
@*title added by atul on 28 june 2017----start*@
@{
    ViewBag.Title = "Assign Branch Admin";
}
@System.Web.Optimization.Styles.Render("~/Content/Select2")
@System.Web.Optimization.Scripts.Render("~/bundles/Select2")
<link href="~/Content/css/asign_branch_admin.css" rel="stylesheet" />
<link href="~/Content/allcss/allcss.css" rel="stylesheet" />
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">
            @if (@ViewBag.Message != string.Empty)
            {
                <h6 style="color:Green">
                    @ViewBag.Message
                </h6>
            }
            <div class="row page-breadcrumb breadcrumb ed_breadcrumb">
                <div class="col-sm-6">
                    <ul>
                        <li class="li_margin1">
                            <img src="~/Content/images/icon/home_1.png" class="home_width_height" />
                            <a href="@Url.Action("Index", "Home")">Home</a><i class="fa fa-angle-right"></i>

                        </li>
                        <li class="li_margin">
                            <a href="#">Administration</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li class="li_margin">
                            <a href="@Url.Action("Index", "WetosHoliday")">Assign HR Manager </a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-6">
                    <ul style="float: right;">
                        <li class="">
                            <div id="dashboard-report margin_left" data-toggle="tooltip" title="Today's date">
                                <img src="~/Content/images/icon/imageedit_42.png" class="icon_width_height" />
                                <span>
                                    @*@DateTime.Now.ToLongDateString()*@
                                    @{
                                        string timezoneId = System.Configuration.ConfigurationManager.AppSettings["TimeZoneId"];
                                    }
                                    @TimeZoneInfo.ConvertTimeFromUtc(DateTime.UtcNow, TimeZoneInfo.FindSystemTimeZoneById(timezoneId)).ToLongDateString()
                                </span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <h1 class="margin_left_h1">
                Assign and Remove Branch Admin
            </h1>
            <div style="clear: both;"></div>
        </section>
        <section class="content" style="padding-left: 1.5% !important;">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                Html.HiddenFor(model => model.RoleId);
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                Select Employee<span style="color:Red;font-size:18px">*</span>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-university"></i>
                                    </div>
                                    @Html.DropDownListFor(a => a.EmployeeId, (IEnumerable<SelectListItem>)@ViewBag.EmployeeList, "Select", new { @class = "form-control select2", id = "selectemployee",style="width:100%;" })
                                </div>

                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                Role<span style="color:Red;font-size:18px">*</span>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-university"></i>
                                    </div>
                                    @Html.DropDownListFor(a => a.RoleId, (IEnumerable<SelectListItem>)@ViewBag.RoleDef, new { @class = "form-control select2", id = "RoleId", @disabled = "disabled",style="width:100%;" })
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                Select Company<span style="color:Red;font-size:18px">*</span>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-university"></i>
                                    </div>
                                    @Html.DropDownListFor(a => a.CompanyId, (IEnumerable<SelectListItem>)@ViewBag.Company, "Select", new { @class = "form-control select2 multiselect", @multiple = "multiple", id = "CompanyddlList", style = "color:black;width:100%;" })
                                </div>

                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                Select Branch<span style="color:Red;font-size:18px">*</span>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-university"></i>
                                    </div>
                                    @Html.DropDownListFor(a => a.BranchId, (IEnumerable<SelectListItem>)@ViewBag.Branch, "Select", new { @class = "form-control select2 multiselect", @multiple = "multiple", id = "BranchddlList",style="width:100%;" })
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <input type="submit" value="Submit" />
                    </div>
                </div>
                <!-- /.box -->
            }
            <!-- /.box -->
            <!-- /.row -->
        </section>

        <div id="BranchAdminView">

            @{Html.RenderPartial("BranchAdminPartialList", Model.BranchAdminList);}
            @*@{Html.RenderPartial("BranchAdminPartialList", Model.BranchAdminList_Grouped);}*@
        </div>
    </div>
</div>
@*Added by Pushkar For back breadcrumb on 24 OCT 2016---------end*@
