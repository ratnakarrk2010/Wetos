@model WetosMVCMainApp.Models.DailyTransactionAttendanceStatus

@System.Web.Optimization.Styles.Render("~/Content/DatePicker")
@System.Web.Optimization.Scripts.Render("~/bundles/DatePicker")
@System.Web.Optimization.Styles.Render("~/Content/Select2")
@System.Web.Optimization.Scripts.Render("~/bundles/Select2")
<link href="~/Content/allcss/allcss.css" rel="stylesheet" />

<style>
     .row {
        margin-right: 0px;
    }
    .padding_right_0{
        padding-right: 0px;
    }
    .home_width_height {
        width: 25px;
        height: 25px;
    }
    .icon_width_height {
        width: 30px;
        height: 30px;
    }
    .date_margin {
        margin-left: 66%;
    }
    .page-breadcrumb.breadcrumb {
        padding-right: 0px !important;
        padding-left: 8px;
    }
    .page-title {
        color: #2c599f;
    }
    .icon_btn {
        position: relative;
        background-image: linear-gradient(#20466f,#20466f) !important;
        color: #fff;
        font-size: 16px;
        box-shadow: 0px 1px 4px -2px #333;
        text-shadow: 0px -1px #333;
        width: 100px;
        padding: 3px 0px;

    }

        .icon_btn:after {
            content: '';
            position: absolute;
            top: -1px;
            left: 0%;
            width: calc(100%);
            height: 60%;
            background: linear-gradient(rgba(255,255,255,0.5), rgba(255,255,255,0.1));
            z-index: 1;
        }
        .select2-container .select2-selection--single {
            box-sizing: border-box;
            cursor: pointer;
            display: block;
            height: 33px;
            user-select: none;
            -webkit-user-select: none;
        }
        .content_div_padding {
            padding: 27px 0px 5px 0px!important;
            margin-left: 5px;
        }
        .max_width{
            font-size:13px;
        }
    @@media screen and (min-width: 320px) and (max-width: 767px) {
        .date_margin {
            margin-left: 54%;
            margin-top: -9%;
        }
        .max_width_49{
           max-width:49%;
        }
        .max_width {
            max-width: 35%;
        }
        .display_flex{
            display: flex;
        }
        .show_data_div{
            padding-right:0px;
        }
        .btn_show_data{
            float: right;
            margin-top: 5%;
            margin-bottom: 3%;
        }
    }
</style>


<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">
           
            <div class="row page-breadcrumb breadcrumb ed_breadcrumb">
                <div class="col-sm-6">
                    <ul>
                        <li  class="li_margin1">
                            <img src="~/Content/images/icon/home_1.png" class="home_width_height" />
                            <a href="@Url.Action("Index", "Home")">Home</a><i class="fa fa-angle-right"></i>

                        </li>
                       
                       <li class="li_margin"><a href="#">Attendance Status </a></li>
                        </ul>
                </div>
                <div class="col-sm-6">
                    <ul style="float: right;">
                        <li class="">
                            <div id="dashboard-report margin_left" data-toggle="tooltip" title="Today's date">
                                <img src="~/Content/images/icon/imageedit_42.png" class="icon_width_height" />
                                <span>
                                    @DateTime.Now.ToLongDateString()
                                </span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <br />
            <h1 class="page-title" style="text-shadow: -3px 0px 4px #6f88a2; ">
                <i>Attendance Status</i> <small>@*Leave Application*@</small>
            </h1>
            <br />
            <div style="clear: both;"></div>
        </section>
        <section class="content content_div_padding" style="box-shadow: 0px 2px 6px #a9b1b8;">
            <div class="row">
                <div class="col-xs-12 col-md-12 col-lg-12">
                    <div class="box box-primary">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-4 display_flex">
                                    <div class="col-md-3 max_width">
                                        Year <span style="color: Red; font-size: 18px ">*</span>
                                    </div>
                                    <div class="editor-field col-md-5 form-group max_width_49">
                                        @Html.DropDownListFor(a => a.FinancialYearId, (IEnumerable<SelectListItem>)@ViewBag.YearListVB, "Select", new { @class = "form-control select2", style = "width:200px", @id = "FYid" })
                                    </div>
                                </div>
                                <div class="col-md-4 display_flex">
                                    <div class="col-md-3 max_width">
                                        Month <span style="color:Red;font-size:18px">*</span>
                                    </div>
                                    <div class="editor-field col-md-5 max_width_49">
                                        @Html.DropDownListFor(a => a.MonthId, (IEnumerable<SelectListItem>)@ViewBag.MonthListVB, "Select", new { @class = "form-control select2", style = "width:200px", @id = "Month" })
                                    </div>
                                </div>

                                <div class="col-md-1 show_data_div">
                                    <button type="button" class="icon_btn btn_show_data" id="BtnSubmit" data-toggle="tooltip" title="Show Data" value="Show Data">Show Data</button>
                                </div>
                            </div>
                        </div>
                        <div id="results">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('.back').click(function () {
            parent.history.back();
            return false;
        });
    });

    function goBack() {
        window.history.back();
    }

    $('.datepicker').datepicker({

        format: "dd-M-yyyy",

        autoclose: true
    });

    // Updated by Rajas on 27 APRIL 2017
    $("#BtnSubmit").click(function () {
        //        var FromDate = $("#FromDate").val();
        //        var ToDate = $("#ToDate").val();

        showloading();  //--- ADDED BY SHALAKA ON 21st JUNE 2017 TO DISPLAY PROGRESS RING

        var FYId = $("#FYid").val();
        var MonthId = $("#Month").val();
        //alert(FYId);
        //alert(MonthId);
        $.ajax({
            url: '@Url.Content("~/ManagerDashBoard/DailyTransactionIndex")',
            type: "POST",
            //dataType: "json",
            //data: { FromDate: FromDate, ToDate: ToDate },
            data: { FinancialYearId: FYId, MonthId: MonthId },
            success: function (data) {
                //alert();
                $("#results").html(data);

            },
            error: function (data) {
                //alert("hello");
            }
        });
        hideloading();  //--- ADDED BY SHALAKA ON 21st JUNE 2017 TO DISPLAY PROGRESS RING

    });





    $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();
    });


    $(document).ready(function () {
        //alert();
        var FromDate = $("#FromDate").val();
        var ToDate = $("#ToDate").val();
        $.ajax({
            url: '@Url.Content("~/ManagerDashBoard/DailyTransactionIndex")',
            type: "POST",
            //dataType: "json",
            data: { FromDate: FromDate, ToDate: ToDate },
            success: function (data) {
                //alert();
                $("#results").html(data);
            },
            error: function (data) {
                //alert("hello");
            }
        });
    });
</script>
