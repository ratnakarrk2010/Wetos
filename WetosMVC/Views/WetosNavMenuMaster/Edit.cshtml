@model WetosMVCMainApp.Models.NavMenuModel
@{
    ViewBag.Title = "Nav Menu Update";
}
@System.Web.Optimization.Styles.Render("~/Content/Select2")
@System.Web.Optimization.Scripts.Render("~/bundles/Select2")
@System.Web.Optimization.Scripts.Render("~/bundles/LayoutTheme")
<style type="text/css">
    .row
    {
        margin-bottom: 10px;
    }
</style>
@*VIEW CREATED AND STARTED BY NANDINI ON 14 APRIL 2020*@
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">
<h1>Nav Menu
 <small>Edit</small>
</h1>

<div class="row">
                <div class="col-md-12">
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="@Url.Action("Index", "Home")">Home </a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                         <a href="#">Masters</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "DropdownData")">Nav Menu</a>
                        </li>
                        <li class="pull-right">
                            <div id="dashboard-report"  data-toggle="tooltip" title="Today's date">
                                <span style="cursor: pointer" class="back "  data-toggle="tooltip" title="Back" id="goback"><i class="fa fa-arrow-left"></i>

                                </span>
                                <i class="fa fa-calendar"></i>
                                <span>@DateTime.Now.ToLongDateString()
                                </span>
                            </div>
                           
                        </li>
                    </ul>
                </div>
            </div>
      <div style="clear: both;"></div>

       

      </section>
        <section class="content">
      <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-12">
          <div class="box">
         
            <!-- /.box-header -->
            <div class="box-body">
            
@using (Html.BeginForm("Edit", "WetosNavMenuMaster", FormMethod.Post, new { id = "CreateBranchForm" }))
{
    <div style="color: Red; font-size: 12px">
    @Html.ValidationSummary(true)
    </div>
   @Html.HiddenFor(model => model.NavMenuId)
   
    <div style="color: Red; font-size: 12px">
            @Html.ValidationMessage("Error")
            </div>
   
    <div class="row">
             <div class="col-md-10">  
            <input type="radio" id="opt1" name="opt" value="ParentWise"/> Parent Nav Menu
            <input type="radio" id="opt2" name="opt" value="ChildWise" checked="checked"/> Child Nav Menu
            
            </div>
            
            </div>  
  
    <div class="row MeuNameId">
        <div class="editor-label col-md-2">
    Menu Name <span style="color:Red;font-size:18px" >*</span>
        </div>
        <div class="editor-field col-md-5">
        

         <div class="input-group date">
          <div class="input-group-addon">
                   <i class="fa fa-building-o" aria-hidden="true"></i>
                  </div> 
             @Html.DropDownListFor(model => model.MenuNameId, (IEnumerable<SelectListItem>)@ViewBag.NavMenuParentList, "Select", new { @class = "form-control select2", style = "width:300px;", @id = "" })
            <div style="color: Red; font-size: 12px">
            @Html.ValidationMessageFor(model => model.MenuNameId)
            </div>
            </div>
        </div>
   </div> 
    
     <div class="row NavMenuNameId">
        <div class="editor-label col-md-2">
    Nav Menu Name<span style="color:Red;font-size:18px" >*</span>
        </div>
        <div class="editor-field col-md-5">
            
            
            <div class="input-group date">
             <div class="input-group-addon">
             <i class="fa fa-university" aria-hidden="true"></i>
             </div> 
            @Html.TextBoxFor(model => model.NavMenuName, new { @class = "form-control", @style = "width:300px;" })
           
        </div>
      
             <div style="color: Red; font-size: 12px">
            @Html.ValidationMessageFor(model => model.NavMenuName)
            </div>
       </div> 
       </div>
         
    
    <div class="row NavLinkId">
        <div class="editor-label col-md-2">
    Nav Link <span style="color:Red;font-size:18px" >*</span>
        </div>
        <div class="editor-field col-md-5">
        

         <div class="input-group date">
          <div class="input-group-addon">
                   <i class="fa fa-building-o" aria-hidden="true"></i>
                  </div> 
            @Html.TextBoxFor(model => model.NavLink, new { @class = "form-control", @style = "width:300px;" })
            <div style="color: Red; font-size: 12px">
            @Html.ValidationMessageFor(model => model.NavLink)
            </div>
            </div>
        </div>
   </div> 

         
    <div class="row">
        <div class="editor-label col-md-2">
        Sr.No.  <span style="color:Red;font-size:18px" >*</span>
        </div>
        <div class="editor-field col-md-5">
        


         <div class="input-group date">
          <div class="input-group-addon">
                   <i class="fa fa-building-o" aria-hidden="true"></i>
                  </div> 
            @Html.TextBoxFor(model => model.SrNo, new { @class = "form-control", @style = "width:300px;" })
            <div style="color: Red; font-size: 12px">
            @Html.ValidationMessageFor(model => model.SrNo)
            </div>
            </div>
        </div>
   </div> 

         
    <div class="row">
        <div class="editor-label col-md-2">
        Icon  <span style="color:Red;font-size:18px" >*</span>
        </div>
        <div class="editor-field col-md-5">
         <div class="input-group date">
          <div class="input-group-addon">
                   <i class="fa fa-building-o" aria-hidden="true"></i>
                  </div> 
            @Html.DropDownListFor(model => model.NavMenuIcon, (IEnumerable<SelectListItem>)@ViewBag.NavMenuIconList, "Select", new { @class = "form-control select2", style = "width:300px;", @id = "" })
            <div style="color: Red; font-size: 12px">
            @Html.ValidationMessageFor(model => model.NavMenuIcon)
            </div>
            </div>
        </div>
   </div> 

         
 
 <hr />
         
       <p>
            <input type="button" id="Branchbtn" value="Update" class="btn btn-default" style="cursor:pointer; float:left" title = "Click to Update Nav Menu"/>
            <span  class="btn btn-default" style="cursor:pointer; float:left;margin-left:10px" title = "Click to go back to Nav Menu List">@Html.ActionLink("Back to Nav Menu List", "Index")</span>
           
        </p>
    
}


</div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    </div>
</div>
<div id="branchdiv" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                Do you Want to Update Nav Menu?
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="col-md-2  btn btn-primary" id="DeleteBtn">
                    Yes</button>
                <button type="button" data-dismiss="modal" class="col-md-2 btn">
                    Cancel</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();
    });

    
    
</script>
<script type="text/jscript">
    $(document).ready(function () {
        $('.back').click(function () {
            parent.history.back();
            return false;
        });
        $('[data-toggle="tooltip"]').tooltip();
       
        $(".SelectParentId").hide();  
    });

    function goBack() {
        window.history.back();
    }


    $("#Branchbtn").click(function () {

        var $form = $(this).closest('form');
        $('#branchdiv').modal({ backdrop: 'static', keyboard: false })
                .one('click', '#DeleteBtn', function () {



                    $("#CreateBranchForm").submit();
                });

    });


    //ADDED BY NANDINI ON 14 APRIL 2020
    $("input:radio[name=opt]").click(function () {
        // alert("SelectOS");
        if ($(this).val() == "ParentWise") {
            $(".SelectParentId").show();
            $(".MeuNameId").hide();
            $(".NavLinkId").hide();

        } else {
            $(".SelectParentId").hide();
            $(".MeuNameId").show();
            $(".NavLinkId ").show();


        }
    });

</script>
@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
}
