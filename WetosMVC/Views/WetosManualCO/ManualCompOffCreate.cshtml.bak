            dataType: "json",
            data: { LoginTime: LoginTime, LogoutTime: LogoutTime },
            success: function (data) {
                if (data == 0) {
                    $("#LogoutTime").focus();
                    $("#LogoutTime").css("border", "1px solid Red");

                    $("#savebtn").attr("disabled", true);
                }
            },
            error: function (data) {
                $("#LogoutTime").focus();
                $("#LogoutTime").css("border", "1px solid Red");

                $("#savebtn").attr("disabled", true);
            }
