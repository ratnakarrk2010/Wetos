@model IEnumerable<WetosDB.Shift>
    @{
        ViewBag.Title = "Index";
    }
    <div>
        <section class="content-header">
            <h1>
                Shift
                <small> Details</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "WetosShift")"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Shift</a></li>

            </ol>
        </section>
    </div>
    <div class="container" style="margin-right: 100px; overflow: auto;">
        <p>
            @Html.ActionLink("Add New Shift", "Create")
        </p>
    </div>
    <section class="content">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Shift Details</h3>
            </div>

            <!-- /.box-header -->
            <div class="box-body">


                <table class="table table-striped">
                    <tr>
                        <th>
                            ShiftName
                        </th>
                        <th>
                            ShiftType
                        </th>
                        <th>
                            FirstInTime
                        </th>
                        <th>
                            FirstOutTime
                        </th>
                        <th>
                            SecondInTime
                        </th>
                        <th>
                            SecondOutTime
                        </th>
                        <th>
                            LunchStartTime
                        </th>
                        <th>
                            LunchEndTime
                        </th>
                        <th>
                            LunchTime
                        </th>
                        <th>
                            LunchTimeExcludeFlag
                        </th>
                        <th>
                            WorkingHours
                        </th>
                        <th>
                            NightShiftFlag
                        </th>
                        <th>
                            CompanyId
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShiftName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShiftType)
                            </td>
                            <td>
                                @{var FirstInTimeVar = @item.FirstInTime.ToString("HH:mm");}
                                @Html.DisplayFor(modelItem => FirstInTimeVar)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstOutTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SecondInTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SecondOutTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LunchStartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LunchEndTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LunchTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LunchTimeExcludeFlag)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WorkingHours)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NightShiftFlag)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyId)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ShiftId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ShiftId })
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.ShiftId }) *@
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </section>
