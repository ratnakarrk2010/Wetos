@model IEnumerable<WetosDB.Location>
    @{
        ViewBag.Title = "Index";
    }
    @System.Web.Optimization.Styles.Render("~/Content/DataTable")
    @System.Web.Optimization.Scripts.Render("~/bundles/DataTable")
  
        <section class="content-header">

            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Masters</li>
                <li><a href="#">Physical Location Master</a></li>

            </ol>

            @*Added by Pushkar For back breadcrumb on 24 OCT 2016----------Start*@
            <div>
                <span style="float:right"><a href="#" id="goback" class="fa fa-arrow-left back"></a></span>
                <span style="float:left">@Html.ActionLink("Add New Location", "Create")</span>

            </div>
            <div style="clear: both;"></div>
            <h1 class="margin_left_h1">
                Physical Location
                <small>Index</small>
            </h1>
            @*Added by Pushkar For back breadcrumb on 24 OCT 2016-----------End*@


        </section>

        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Index</h3>
                        </div>
                        <div class="box-body">

                            <table id="PhysicalLocationMaster" class="table table-bordered table-striped">
                                @*Added by Pushkar For datatable on 25 OCT 2016*@
                                <thead>
                                    <tr>
                                        <td>
                                            Location Name
                                        </td>
                                        <td>
                                            Address
                                        </td>
                                        <td>
                                            City
                                        </td>
                                        <td>Action</td>
                                    </tr>

                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("Details", "WetosPhysicalLocation", new { id = item.LocationId})">
                                                    @item.LocationName
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.City)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.LocationId }) |
                                                @*@Html.ActionLink("Details", "Details", new { id = item.LocationId }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.LocationId }) *@
                                            </td>
                                        </tr>
                                    }

                                </tbody>

                                <tfoot>

                                </tfoot>

                            </table>
                            <div>
                            </div>
        </section>

        @*Added by Pushkar For back breadcrumb on 24 OCT 2016-------start*@
        <script type="text/jscript">
            $(document).ready(function () {
                $('a.back').click(function () {
                    parent.history.back();
                    return false;
                });
            });

            function goBack() {
                window.history.back();
            }



        </script>
        @*Added by Pushkar For back breadcrumb on 24 OCT 2016---------end*@

        @*Added by Pushkar For datatable on 25 OCT 2016-------start*@
        <script>
            $(function () {

                $("#PhysicalLocationMaster").DataTable();

            });
        </script>

