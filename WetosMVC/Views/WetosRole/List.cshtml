@model IEnumerable<WetosDB.RoleDef>
@*title added by atul on 28 june 2017----start*@
@{
    ViewBag.Title = "Role Master List";
}
@System.Web.Optimization.Styles.Render("~/Content/DataTable")
 @System.Web.Optimization.Scripts.Render("~/bundles/DataTable")
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">
            <h1>Role Master
                <small>List</small>
                 <span data-toggle="tooltip" title="Add Role" style="float:right;font-weight:800">
                 @Html.ActionLink(" ", "Create", new { }, new { @class = "fa fa-plus-circle", title = "Add Role", style = "color:#428bca;font-size:19px" })</span>
         
            </h1>
            <div class="row">
                <div class="col-md-12">
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="@Url.Action("Index", "Home")">Home </a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                         <a href="#">Masters</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="@Url.Action("List", "WetosRole")">Role </a>
                        </li>
                        <li class="pull-right">
                            <div id="dashboard-report"  data-toggle="tooltip" title="Today's date">
                                <span style="cursor:pointer" class="back "  data-toggle="tooltip" title="Back" id="goback"><i class="fa fa-arrow-left"></i></span>
                                <i class="fa fa-calendar"></i>
                                <span>@DateTime.Now.ToLongDateString()</span>                           
                            </div>
                        </li>              
                    </ul>
                </div>
            </div>  
            <div style="clear: both;"></div>
        </section>
        <section class="content">
           
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header"></div>
                            <div class="box-body">
                           
                                <table id="RoleMaster" class="table table-bordered table-striped">  @*Added by Pushkar For datatable on 25 OCT 2016*@
                                    <thead>
    <tr>
       
        <td>
            Role Name
        </td>
        <td>
            Role Description
        </td>
         <td>Action</td>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
       
        <td>
         <a href="@Url.Action("Details", "WetosRole", new { id = item.RoleId })" style="cursor:pointer; float:left" title = "Click to view Role details"/>
        @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @item.RoleDescription
        </td>
         <td>
            
              <span data-toggle="tooltip" title="Edit">
                                                @Html.ActionLink(" ", "Edit", new { id = item.RoleId }, new { @class = "fa fa-pencil-square-o" })</span> |
                                                @*@Html.ActionLink("Details", "Details", new { id = item.CompanyId }) |*@
                                                <span data-toggle="tooltip" title="Delete">
                                                @Html.ActionLink(" ", "Delete", new { id = item.RoleId }, new { @class = "fa fa-trash" })
                                                </span>
           
        </td>
    </tr>
}
</tbody>
<tfoot></tfoot>
</table>
   </div>
                        <!-- /.box-body -->
                    </div>                    
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
    </div>
</div>
@*Added by Pushkar For back breadcrumb on 24 OCT 2016-------start*@
