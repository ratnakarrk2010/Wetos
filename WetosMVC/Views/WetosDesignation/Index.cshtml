@model IEnumerable<WetosDB.VwDesignationDetail>
@{
    ViewBag.Title = "Designation Master List";
}
@System.Web.Optimization.Styles.Render("~/Content/DataTable")
 @System.Web.Optimization.Scripts.Render("~/bundles/DataTable")
<style type="text/css">
    .row
    {
        margin-bottom: 10px;
    }
</style>
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">
          <h1>
            Designation Master
            <small>List</small>
            <span data-toggle="tooltip" title="Add Designation" style="float:right;font-weight:800">
            @Html.ActionLink(" ", "Create", new { }, new { @class = "fa fa-plus-circle", title = "Add Designation", style = "color:#428bca;font-size:19px" })</span>
       
          </h1>
            <div class="row">
                <div class="col-md-12">
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="@Url.Action("Index", "Home")">Home </a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                         <a href="#">Masters</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "WetosDesignation")">Designation </a>
                        </li>
                        <li class="pull-right">
                            <div id="dashboard-report"  data-toggle="tooltip" title="Today's date">
                                <span style="cursor:pointer" class="back "  data-toggle="tooltip" title="Back"id="goback"><i class="fa fa-arrow-left"></i></span>
                                <i class="fa fa-calendar"></i>
                                <span>@DateTime.Now.ToLongDateString()</span>                           
                            </div>
                        </li>              
                    </ul>
                </div>
            </div>  
      <div style="clear: both;"></div>
       @*Added by Pushkar For back breadcrumb on 24 OCT 2016-----------End*@
    </section>
        <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
           
            <div class="box-body">
<table id="DesignationMaster" class="table table-bordered table-striped">  @*Added by Pushkar For datatable on 25 OCT 2016*@
<thead>
    <tr>
        <td>
            Designation Code
        </td>
        <td>
            Designation
        </td>
        <td>
            Department
        </td>
        <td>
            Branch
        </td>
        <td>
            Company
        </td>
        <td>Action</td>
    </tr>

     </thead>
        <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DesignationCode)
        </td>
        <td>
          <a href="@Url.Action("Details", "WetosDesignation", new { id = item.DesignationId })""tooltip" style="cursor:pointer; float:left" title = "Click to view Designation details">
                        
            @item.DesignationName</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BranchName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
          
            
                                         <span data-toggle="tooltip" title="Edit">
                                                @Html.ActionLink(" ", "Edit", new { id = item.DesignationId }, new { @class = "fa fa-pencil-square-o" })</span> |
                                                @*@Html.ActionLink("Details", "Details", new { id = item.CompanyId }) |*@
                                                <span data-toggle="tooltip" title="Delete">
                                                @Html.ActionLink(" ", "Delete", new { id = item.DesignationId }, new { @class = "fa fa-trash" })
                                                </span>
        </td>
    </tr>
}


</tbody>
<tfoot>
                
                </tfoot>

</table>
</div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    </div>
</div>
