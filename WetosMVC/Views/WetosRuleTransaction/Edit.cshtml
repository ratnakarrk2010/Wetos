<script type="text/javascript">
    // function start
    $(function () {

        //Initialize Select2 Elements
        $(".select2").select2();

        //Datemask dd/mm/yyyy

        //Date picker
        $('.datepicker').datepicker({

            format: "dd/mm/yyyy",

            autoclose: true
        });

        // function end

        //Timepicker
        $(".timepicker").timepicker({
            showInputs: false
        });
    });

    // MULTIPLE SELECTION SELECT2
    // Added by Rajas on 21 APRIL 2017 START
    $(".multiselect").select2();
    $("#checkbox").click(function () {
        //alert(multiselect);
        if ($("#checkbox").is(':checked')) {
            $(".multiselect > option").prop("selected", "selected");
            $(".multiselect").trigger("change");
        }
        else {
            //alert(multiselect);
            $(".multiselect > option").removeAttr("selected");
            $(".multiselect").trigger("change");
        }
    });
    // Added by Rajas on 21 APRIL 2017 END

</script>
