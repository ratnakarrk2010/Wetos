@model IEnumerable<WetosDB.RuleEngine>
@{
    ViewBag.Title = "Rule Engine List";
}
@System.Web.Optimization.Styles.Render("~/Content/DataTable")
@System.Web.Optimization.Scripts.Render("~/bundles/DataTable")
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">
      <h1>
        Rule Engine
        <small>List</small>
          <span  style="float:right;font-weight:800">
          @Html.ActionLink(" ", "Create", new { }, new { @class = "fa fa-plus-circle", title = "Add Rule Engine", style = "color:#428bca;font-size:19px" })</span>
         @*CODE ADDED BY SHRADDHA ON 08 FEB 2018 START*@
          <span class="fa fa-share-square-o"   data-toggle="tooltip" title="Click to Export Rule Data" style="font-size:20px;float:right;color:blue;margin:5px;cursor:pointer" onclick="@("window.location.href='" + @Url.Action("ExportData", "WetosRuleTransaction") + "'")">
                </span>
                @*CODE ADDED BY SHRADDHA ON 08 FEB 2018 END*@
      </h1>
      <div class="row">
                <div class="col-md-12">
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="@Url.Action("Index", "Home")">Home </a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                         <a href="#">Administration</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "WetosRuleTransaction")">Rule Engine </a>
                        </li>
                        <li class="pull-right">
                            <div id="dashboard-report"  data-toggle="tooltip" title="Today's date">
                                <span style="cursor:pointer" class="back "  data-toggle="tooltip" title="Back" id="goback"><i class="fa fa-arrow-left"></i></span>
                                <i class="fa fa-calendar"></i>
                                <span>@DateTime.Now.ToLongDateString()</span>                           
                            </div>
                        </li>              
                    </ul>
                </div>
            </div>

        @*Added by Pushkar For back breadcrumb on 24 OCT 2016----------Start*@
      
      <div style="clear: both;"></div>

       @*Added by Pushkar For back breadcrumb on 24 OCT 2016-----------End*@

      </section>
        <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
          
            <div class="box-body">
            
          
<table id="RuleTransaction" class="table table-striped table-bordered table-condensed table-hover">
<thead>
    <tr>
        <td>
            Rule Id
        </td>
        <td>
            Rule Name
        </td>
       
        <td>
            Formula
        </td>
        <td>
            Sub Code
        </td>
        <td>
            Head Code
        </td>
        <td>
            Active
        </td>
        <td>
        Action
        </td>
    </tr>
    </thead>
        <tbody>
    @foreach (var item in Model)
    {
        <tr>
         <td>
                @item.RuleId
            </td>
         <td>
              <a href="@Url.Action("Details", "WetosRuleTransaction", new { id = item.RuleEngineId })" style="cursor:pointer; float:left" title = "Details"> 
             @item.RuleName
             </a>
            </td>
            
            <td>
                @item.Formula
            </td>
            <td>
                @item.SubCode
            </td>
            <td>
                @item.HeadCode
            </td>
            <td>
                @item.Active
            </td>
            <td>
                <span data-toggle="tooltip" title="Edit">
                    @Html.ActionLink(" ", "Edit", new { id = item.RuleEngineId }, new { @class = "fa fa-pencil-square-o" })
                </span> 
                @*@Html.ActionLink("Details", "Details", new { id = item.CompanyId }) |*@
                </td>
        </tr>
    }
    </tbody>
<tfoot>
</tfoot>
</table>
</div>
</div>
</div>
</div>
</section>
    </div>
</div>
