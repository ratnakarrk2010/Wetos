@using WetosDB
@using WetosMVC.Controllers
@model List<sp_get_audit_trail_Result>
@{
    ViewBag.Title = "Audit Logs";
}
@*<link href="@Url.Content("~/Content/datatables.min.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/scripts/datatables.min.js")" type="text/javascript"></script>*@
@System.Web.Optimization.Styles.Render("~/Content/DataTable")
@System.Web.Optimization.Scripts.Render("~/bundles/DataTable")
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">

   @*Added by Shalaka on 27th DEC 2017 -- Start*@
           <h1>
               Audit Logs
            </h1>
            <div class="row">
                <div class="col-md-12">
                    <ul class="page-breadcrumb breadcrumb">
                        <li><i class="fa fa-home"></i><a href="@Url.Action("Index", "Home")">Home </a><i
                            class="fa fa-angle-right"></i></li>
                         <li><a href="#">Audit Trails</a> <i class="fa fa-angle-right"></i></li>
                        <li><a href="#">Audit Logs</a> </li>
                        <li class="pull-right">
                            <div id="dashboard-report" data-toggle="tooltip" title="Today's date">
                                <span style="cursor: pointer" class="back " id="goback"><i class="fa fa-arrow-left">
                                </i></span><i class="fa fa-calendar"></i><span> @DateTime.Now.ToLongDateString()</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
          <br />
        @*Added by Shalaka on 27th DEC 2017 -- End*@
<b>User Name</b><input type="text" id="UserName" value="@ViewBag.UserName" readonly="readonly"/>
<b>From Date</b><input type="text" id="FromDate" value="@ViewBag.FromDate" readonly="readonly"/>
<b>To Date</b><input type="text" id="ToDate" value="@ViewBag.ToDate" readonly="readonly"/>

<hr />
<table id="example" class="table table-striped table-bordered table-condensed table-hover">
    <thead>
        
        <tr>
            <td style="text-align: center; width: 100px">
                Log Date
            </td>
            <td style="text-align: center; width: 400px">
                Action
            </td>
            
            
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td style="text-align: center">
                    @Html.DisplayFor(ModelItem => Model[i].LogDate)
                </td>
                <td style="text-align: left">
                    @Html.DisplayFor(ModelItem => Model[i].Action)
                </td>
                

            </tr>
        }
    </tbody>
    <tfoot>
       
    </tfoot>
</table>

</section>
    </div>
</div>
<script type="text/javascript">

    $("#example").DataTable();
</script>

<script>
    $(document).ready(function () {

        //Added by Shalaka on 27th DEC 2017 to solve Back Button Not working -- Start
        $('.back').click(function () {
            parent.history.back();
            return false;
        });
        //Added by Shalaka on 27th DEC 2017 to solve Back Button Not working -- End
    });
</script>
