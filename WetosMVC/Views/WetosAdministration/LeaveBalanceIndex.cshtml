        <td>
            @item.FinancialName
        </td>
        <td>
            @item.LeaveType
        </td>
        <td class="quantity">
            @String.Format("{0:F}", item.PreviousBalance)
        </td>
        <td class="quantity">
            @String.Format("{0:F}", item.CurrentBalance)
        </td>
        <td class="quantity">
            @String.Format("{0:F}", item.LeaveUsed)
        </td>
        <td>
            @item.CompanyName
        </td>
        <td>
            @item.BranchName
        </td>
        <td>
           
             <span data-toggle="tooltip" title="Edit">
