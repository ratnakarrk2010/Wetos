@model WetosDB.UploadDocument
@{
    ViewBag.Title = "Upload Documents";
}
@System.Web.Optimization.Styles.Render("~/Content/Select2")
@System.Web.Optimization.Scripts.Render("~/bundles/Select2")
<link href="~/Content/css/upload_documents.css" rel="stylesheet" />
<link href="~/Content/allcss/allcss.css" rel="stylesheet" />
@*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@
<style>
    .upload_txt{
        margin-left:1.5%;
    }
    .disk_top{
            margin-top:1%;
        }
    @@media screen and (min-width: 320px) and (max-width: 767px) {
        .file_msg{
            margin-left: 3.5%;
        }
        .box-body {
            overflow-x: hidden;
        }
        .m_top{
            margin-top:2%;
        }
        .disk_top{
            margin-top:2%;
        }
    }
    @@media screen and (min-width: 320px) and (max-width: 399px) {
        .n_margin_left_5{
            margin-left: -5% !important;
            width: 109%
        }
    }
    @@media screen and (min-width: 400px) and (max-width: 767px) {
        .n_margin_left_5{
            margin-left: -3% !important;
            width: 107%
        }
    }

</style>
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">

        <section class="content-header">
            <div class="row page-breadcrumb breadcrumb ed_breadcrumb ed_breadcrumb_row">
                <div class="col-sm-6 ed_breadcrumb_div" style="">
                    <ul>
                        <li class="li_margin1">
                            <img src="~/Content/images/icon/home_1.png" class="home_width_height" />
                            <a href="@Url.Action("Index", "Home")">Home</a><i class="fa fa-angle-right"></i>

                        </li>
                        <li>
                        <li class="li_margin">
                            <a href="#">Employee Management</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li class="li_margin">
                            <a href="#">Upload Documents </a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-6">
                    <ul style="float: right;">
                        <li class="">
                            <div id="dashboard-report margin_left" data-toggle="tooltip" title="Today's date">
                                <img src="~/Content/images/icon/imageedit_42.png" class="icon_width_height" />
                                <span>
                                    @DateTime.Now.ToLongDateString()
                                </span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <h1 class="margin_left_h1">
                Upload Documents
                <small></small>
            </h1>

            @*Added by Pushkar For back breadcrumb on 24 OCT 2016----------Start*@

            <div style="clear: both;"></div>

            @*Added by Pushkar For back breadcrumb on 24 OCT 2016-----------End*@
        </section>

        <div class="file_msg upload_txt" style="        color: green
">
            @ViewBag.Message
        </div>
        <section class="content">
            <div class="row">
                <div class="col-xs-12 col-md-12 col-lg-12">

                    <div class="box">
                        <div class="box-header">
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            @using (Html.BeginForm("UploadDocuments", "WetosAdministration", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.ValidationSummary(true)
                                <fieldset>
                                    <legend class="upload_txt">Upload Employee Document</legend>

                                    @* <div class="editor-label">
                                            @Html.LabelFor(model => model.EmployeeID)
                                        </div>
                                        <div class="editor-field">
                                            @Html.EditorFor(model => model.EmployeeID)
                                            @Html.ValidationMessageFor(model => model.EmployeeID)
                                        </div>*@
                                    <div class="row n_margin_left_5">
                                        <div class="col-md-4">
                                            <div class="editor-label">
                                                Select Employee
                                            </div>
                                            <div class="editor-field">
                                                @Html.DropDownListFor(a => a.EmployeeID, (IEnumerable<SelectListItem>)ViewBag.sel_messageto, "Select", new { @class = "form-control select2", style = "width:300px", id = "EmployeeIdList" })

                                            </div>
                                        </div>
                                        <div class="col-md-4 m_top">
                                            <div class="editor-label">
                                                Document Type
                                            </div>
                                            <div class="editor-field">
                                                @Html.DropDownListFor(a => a.DocContentType, (IEnumerable<SelectListItem>)ViewBag.DocumentTypeVB, "Select", new { @class = "form-control select2", style = "width:300px" })
                                            </div>
                                        </div>
                                    </div>

                                    @* <div class="editor-label">
                                            @Html.LabelFor(model => model.DocType)
                                        </div>
                                        <div class="editor-field">
                                            @Html.EditorFor(model => model.DocType)
                                            @Html.ValidationMessageFor(model => model.DocType)
                                        </div>*@
                                   
                                    <div class="row n_margin_left_5 disk_top">
                                        <div class="col-md-6">
                                            <div class="editor-label">
                                                Document Description
                                            </div>
                                            <div class="editor-field">
                                                @Html.TextAreaFor(model => model.DocDescription, new { style = "width: 485px; height: 70px;" })

                                            </div>
                                        </div>
                                    </div><br />
                                    @*<div class="editor-label">
                                            @Html.LabelFor(model => model.DocStatus)
                                        </div>
                                        <div class="editor-field">
                                            @Html.EditorFor(model => model.DocStatus)
                                            @Html.ValidationMessageFor(model => model.DocStatus)
                                        </div>*@

                                    @* <div class="editor-label">
                                            @Html.LabelFor(model => model.ExtraDetails)
                                        </div>
                                        <div class="editor-field">
                                            @Html.EditorFor(model => model.ExtraDetails)
                                            @Html.ValidationMessageFor(model => model.ExtraDetails)
                                        </div>
                                    *@
                                    @*<div class="editor-label">
                                            @Html.LabelFor(model => model.DocPath)
                                        </div>
                                        <div class="editor-field">
                                            @Html.EditorFor(model => model.DocPath)
                                            @Html.ValidationMessageFor(model => model.DocPath)
                                        </div>

                                        <div class="editor-label">
                                            @Html.LabelFor(model => model.DocFolder)
                                        </div>
                                        <div class="editor-field">
                                            @Html.EditorFor(model => model.DocFolder)
                                            @Html.ValidationMessageFor(model => model.DocFolder)
                                        </div>*@

                                    @*<div class="editor-label">
                                            @Html.LabelFor(model => model.FileName)
                                        </div>
                                        <div class="editor-field">
                                            @Html.EditorFor(model => model.FileName)
                                            @Html.ValidationMessageFor(model => model.FileName)
                                        </div>*@

                                    <input class="upload_txt" type="file" name="UploadFile" />
                                    <br />
                                    <p class="upload_txt">
                                        <input type="submit" class="btn btn-default" value="Submit" data-toggle="tooltip" title="Submit" />
                                    </p>
                                </fieldset>
                            }

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();


    });

</script>
