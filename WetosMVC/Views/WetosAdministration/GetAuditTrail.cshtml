                              <div class="input-group date">
        <div class="input-group-addon">
             <i  class="glyphicon glyphicon-user"></i>
  	</div> 
                @Html.DropDownListFor(a => a.EmployeeId, (IEnumerable<SelectListItem>)@ViewBag.Audit, "Select", new { @class = "form-control select2" })
