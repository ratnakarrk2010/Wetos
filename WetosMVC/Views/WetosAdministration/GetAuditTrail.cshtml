             <i  class="glyphicon glyphicon-calendar"></i>
  	</div> 
                <input id="AddItemdatepicker1" class="datepickerex1" name="AddItemdatepicker1" />
                @*<span style="color: Red; font-size: 20px; font-weight: 600"></span>*@
                </div>
            </div>
            </div>
          
            <div>
                <input type="submit" value="Get Audit Log" id="saveitem" />
            </div>
           
       
