@using System.Data
@model DataSet
@System.Web.Optimization.Styles.Render("~/Content/DataTable")
@System.Web.Optimization.Scripts.Render("~/bundles/DataTable")
<link href="~/Content/allcss/allcss.css" rel="stylesheet" />

<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
       
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                    <div class="table-responsive">
                        <table id="SQLQuery" class="table table-bordered table-striped SQLLIst">
                            <thead>
                                <tr>
                                    @foreach (System.Data.DataColumn column in Model.Tables[0].Columns)
                                    {
                                        <td>@column.ColumnName
                                        </td>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < Model.Tables[0].Rows.Count; i++)
                                {
                                    var row = Model.Tables[0].Rows[i];
                                    <tr>
                                        @foreach (System.Data.DataColumn column in Model.Tables[0].Columns)
                                        {
                                            <td>@Html.TextBox(column.ColumnName + "[" + i.ToString() + "]", row[column.ColumnName])
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
</div>
<script type="text/javascript">


    $(document).ready(function () {
        $('#SQLQuery').DataTable({
            "scrollX": true, "scrollY": true
        });
    });

</script>
