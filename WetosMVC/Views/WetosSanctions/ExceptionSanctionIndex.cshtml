                $("#results").html(data);
                $("#ExceptionSanction").DataTable();
                hideloading();  //--- ADDED BY SHALAKA ON 29th DEC 2017 TO HIDE PROGRESS RING
            }
        });
        hideloading();  //--- ADDED BY SHALAKA ON 29th DEC 2017 TO HIDE PROGRESS RING
