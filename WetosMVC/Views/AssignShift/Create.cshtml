    function selectgroup(i) {
        
        var empGroupid_CSV = "";
       
        for(var j =1 ;j<=$("#hid_total").val();j++){
            if($('#chkGroup-'+j).is(':checked').toString()=='true')
            {
                if(empGroupid_CSV != "")
                {
                    empGroupid_CSV = empGroupid_CSV +"," + $("#hid_empgrp-"+j).val();
                }else{
                    empGroupid_CSV = $("#hid_empgrp-"+j).val();
