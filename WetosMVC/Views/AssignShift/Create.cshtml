                        $("#rule").val("");
                        $("#div_subrule").html("");
                        $("#subrule").val(0);
                    }else{
                        $("#rule").val(0);
                        $("#hid_mindate").val("");
                        $('#List').hide();
                        $("#div_rule").hide();
                        
                    }
                },
