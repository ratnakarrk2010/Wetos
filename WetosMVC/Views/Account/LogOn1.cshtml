@model WetosMVCMainApp.Models.LogOnModel
@{  
    
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
    ViewBag.Title = "WetosMVC - Log On";
   
}
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/AdminLTE.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/layout.css")" rel="stylesheet" type="text/css"/>
<link href="@Url.Content("~/Content/components.css")" rel="stylesheet" type="text/css"/>
<style type="text/css">
    .login-box
    {
        margin-top: 5% !important;
    }
    .page-content-wrapper
    {
    }
    
    body
    {
        background-color: White;
    }
</style>
<div style="font-size: 15px; color: Red">@ViewBag.Message</div>
@Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.", new { style = "font-size:15px;color:Red" })
@using (Html.BeginForm())
{            
    <div class="login-box">
        <div class="col-md-offset-5 img-circle">
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body" style="border: 1px solid #428bca">
            <div class="login-box-msg btn btn-block btn-social btn-primary btn-flat" style="text-align: center;
                padding-top: 8px; font-size: 15px; font-weight: bold;">
                <img height="40" width="60" src="@Url.Content("~/images/Companylogo.jpg")"  alt="Person Image"  />
                <span style="width: 5px; height: 40px"></span>wetos MVC
            </div>
            <br />
            <form action="#" method="post">
            <div class="form-group has-feedback">
                @*<input type="text" class="form-control" placeholder="User name">*@
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter Username" })
                @Html.ValidationMessageFor(m => m.UserName) <span class="glyphicon glyphicon-envelope form-control-feedback"
                    style="margin-top: 9px !important"></span>
            </div>
            <div class="form-group has-feedback">
                @* <input type="password" class="form-control" placeholder="Password">
                    *@
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password" })
                @Html.ValidationMessageFor(m => m.Password)<span class="glyphicon glyphicon-lock form-control-feedback"
                    style="margin-top: 9px !important"></span>
            </div>
            <div class="row">
                @*<div class="col-xs-8">
                        <div class="checkbox icheck" style="position:relative !important;margin-left:0px !important">
                            @Html.CheckBoxFor(m => m.RememberMe, new { style = "position:relative !important;margin-left:0px !important" })
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>*@
                <!-- /.col -->
                <div class="col-xs-4 col-sm-4 col-md-4">
                </div>
                <div class="col-xs-4 col-sm-4 col-md-4">
                    @*  <button type="submit" class="btn btn-primary btn-block btn-flat">

                            Sign In</button>*@
                    <input type="submit" value="Sign In" class="btn btn-primary btn-block btn-flat" />
                </div>
                <!-- /.col -->
            </div>
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>
        
}
