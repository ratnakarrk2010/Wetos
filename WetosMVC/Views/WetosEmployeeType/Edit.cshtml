@model WetosMVCMainApp.Models.EmployeeTypeModel
@{
    ViewBag.Title = "Employee Type Edit";
}
<style type="text/css">
    .row
    {
        margin-bottom: 10px;
    }
</style>
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">
      <h1>
        Employee Type
        <small>Edit</small>
      </h1>
      <div class="row">
                <div class="col-md-12">
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="@Url.Action("Index", "Home")">Home</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                         <a href="#">Masters</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "WetosEmployeeType")">Employee Type</a>
                        </li>
                        <li class="pull-right">
                            <div id="dashboard-report"  data-toggle="tooltip" title="Today's date">
                                <span style="cursor:pointer" class="back "  data-toggle="tooltip" title="Back" id="goback"><i class="fa fa-arrow-left"></i></span>
                                <i class="fa fa-calendar"></i>
                                <span>@DateTime.Now.ToLongDateString()</span>                           
                            </div>
                        </li>              
                    </ul>
                </div>
            </div>  
    <div style="clear: both;">
    </div>
 </section>
        <section class="content">
      <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-12">
         
      <div class="box">
            
            <!-- /.box-header -->
            <div class="box-body">

@using (Html.BeginForm("Edit", "WetosEmployeeType", FormMethod.Post, new { id = "Form" }))
{
    @Html.HiddenFor(model => model.EmployeeTypeId)
    <div style="color: Red; font-size: 12px">
    @Html.ValidationSummary(true)
    </div>

    @*Added by Rajas on 29 DEC 2016 For custom error message START*@
            <div style="color: Red; font-size: 12px">
            @Html.ValidationMessage("Error")
            </div>
             @*Added by Rajas on 29 DEC 2016 For custom error message END*@
    
        
        <div class="row">
        <div class="editor-label col-md-4">
       Employee Type  <span style="color:Red;font-size:18px" >*</span>
        </div>
        <div class="editor-field">
        
 @*Favicon added by Mithilesh and Pushkar on 23/06/2017*@
         <div class="input-group date">
          <div class="input-group-addon">
                   <i class="fa fa-users" aria-hidden="true"></i>
                  </div> 
            @Html.EditorFor(model => model.EmployeeTypeName)
            <div style="color: Red; font-size: 12px">
            @Html.ValidationMessageFor(model => model.EmployeeTypeName)
            </div>
            </div>
        </div>
         </div>
     
        <p>
            <input class="btn btn-default" type="button" id="BtnAdd" value="Save" style="cursor:pointer; float:left" title = "Click to save Employee type"/>
             <span  class="btn btn-default" style="cursor:pointer; float:left; margin-left:10px" title = "Click to go back to branch list">@Html.ActionLink("Back to Employee type list", "Index")</span>
        </p>
    
}
</div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    </div>
</div>
@*ADDED CODE BY RAJAS ON 29 MARCH 2017 FOR ALERT POPUP START*@
<div id="ETdiv" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                Do you want to edit employee type?
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="col-md-2  btn btn-primary" id="btn">
                    Yes</button>
                <button type="button" data-dismiss="modal" class="col-md-2 btn">
                    Cancel</button>
            </div>
        </div>
    </div>
</div>
@*ADDED CODE BY RAJAS ON 29 MARCH 2017 FOR ALERT POPUP END*@ @*Added by Pushkar For back breadcrumb on 24 OCT 2016-------start*@
<script type="text/jscript">
    $(document).ready(function () {
        $('.back').click(function () {
            parent.history.back();
            return false;
        });
    });

    function goBack() {
        window.history.back();
    }

    //ADDED CODE BY RAJAS ON 29 MARCH 2017 FOR ALERT POPUP START
    $("#BtnAdd").click(function () {

        var $form = $(this).closest('form');
        $('#ETdiv').modal({ backdrop: 'static', keyboard: false })
                .one('click', '#btn', function () {

                    $("#Form").submit();
                });

    });
    //ADDED CODE BY RAJAS ON 29 MARCH 2017 FOR ALERT POPUP END

</script>
