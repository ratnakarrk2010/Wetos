@model IEnumerable<WetosDB.VwBranchDetail>
@{
    ViewBag.Title = "Branch Master List";
}
@System.Web.Optimization.Styles.Render("~/Content/DataTable")
 @System.Web.Optimization.Scripts.Render("~/bundles/DataTable")
  
<style type="text/css">
    .row
    {
        height: 40px;
    }
</style>
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">
            <h1>Branch Master
        <small>List</small>
         <span data-toggle="tooltip" title="Add Branch" style="float:right;font-weight:800" onclick="ÖnAddBranchClick();">
         @Html.ActionLink(" ", "Create", new { }, new { @class = "fa fa-plus-circle", title = "Add Branch", style = "color:#428bca;font-size:19px" })</span>
            </h1>
            <div class="row">
                <div class="col-md-12">
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="@Url.Action("Index", "Home")">Home </a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                         <a href="#">Masters</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "WetosBranch")">Branch </a>
                        </li>
                        <li class="pull-right">
                            <div id="dashboard-report" data-toggle="tooltip"  title="Today's date">
                                <span style="cursor: pointer" class="back " data-toggle="tooltip"   title="Back" id="goback"><i class="fa fa-arrow-left"></i>@*<a href="#" >Back</a>*@

                                </span>
                                <i class="fa fa-calendar"></i>
                                <span>@DateTime.Now.ToLongDateString()
                                </span>
                            </div>
                            @* <span style="float:left">@Html.ActionLink("Add New Location", "Create")</span>*@
                        </li>
                    </ul>
                </div>
            </div>
            @* <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">Masters</li>
                <li><a href="@Url.Action("Index", "WetosCompany")"><i class="fa fa-arrow-left"></i>Company</a></li>
                <li class="active">Create</li>   
            </ol>*@
            @*Added by Pushkar For back breadcrumb on 24 OCT 2016----------Start*@
            <div style="clear: both;"></div>
            @*Added by Pushkar For back breadcrumb on 24 OCT 2016-----------End*@
        </section>
        <section class="content">
           
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                       
                        <div class="box-body">

                            <table id="BranchMaster" class="table table-bordered table-striped">
                                @*Added by Pushkar For datatable on 25 OCT 2016*@
                                <thead>
                                    <tr>
                                        <td>Branch
                                        </td>
                                        <td>Company 
                                        </td>
                                        <td>Location 
                                        </td>
                                        <td>Action
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("Details", "WetosBranch", new { id = item.BranchId })" style="cursor:pointer; float:left" title = "Click to check branch details">
                                                    @item.BranchName</a>
                                            </td>
                                            <td>
                                                @item.CompanyName
                                            </td>
                                            <td>
                                                @item.LocationName
                                            </td>

                                            <td>
                                            <span data-toggle="tooltip" title="Edit">
                                                @Html.ActionLink(" ", "Edit", new { id = item.BranchId }, new { @class = "fa fa-pencil-square-o" })</span> |
                                                @*@Html.ActionLink("Details", "Details", new { id = item.CompanyId }) |*@
                                                <span data-toggle="tooltip" title="Delete">
                                                @Html.ActionLink(" ", "Delete", new { id = item.BranchId }, new { @class = "fa fa-trash" })
                                                </span>
                                               
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                </tfoot>


                            </table>

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->

                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
    </div>
</div>
