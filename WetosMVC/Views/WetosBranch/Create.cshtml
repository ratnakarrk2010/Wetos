<script type="text/javascript">
    $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();
    });

    // Added by Rajas on 27 DEC 2016 to fill drop down list on selection of other drop down
    $("#LocationddlList").change(function () {
        //alert($("#Application_ID").val());
        isDirty = false;
        var locationid = $("#LocationddlList").val();
        $.ajax({
            url: '@Url.Content("~/WetosBranch/GetCompany")',
            type: "POST",
            dataType: "json",
            data: { Locationid: locationid },
            success: function (data) {
                $("#CompanyddlList").empty();
                $("#CompanyddlList").append("<option value=" + "0" + ">" + "Select" + "</option>");

                for (var i = 0; i < data.length; i++) {

                    // alert(states[i].Group_name);
                    // states.option.selected = true;
                    $("#CompanyddlList").append("<option value=" + "" + data[i].CompanyId + "" + ">" + data[i].CompanyName + "</option>");

                }

            },
            error: function (data) {
                //alert("hello");
            }
        });
    });

</script>
