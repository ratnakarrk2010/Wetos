@model IEnumerable<WetosDB.Schedular>
@{
    ViewBag.Title = "Index";
}
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">
            <h1>Schedular
                <small>List</small>
                 <span data-toggle="tooltip" title="Add Scheduler" style="float:right;font-weight:800" onclick="OnAddCompanyClick();">
                 @Html.ActionLink(" ", "Create", new { }, new { @class = "fa fa-plus-circle", title = "Add Scheduler", style = "color:#428bca;font-size:19px" })</span>
            </h1>
            <div class="row">
                <div class="col-md-12">
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="@Url.Action("Index", "Home")">Home </a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                         <a href="#">Masters</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "WetosSchedular")">Scheduler </a>
                        </li>
                        <li class="pull-right">
                            <div id="dashboard-report"  data-toggle="tooltip" title="Today's date">
                                <span style="cursor:pointer" class="back "  data-toggle="tooltip" title="Back" id="goback"><i class="fa fa-arrow-left"></i></span>
                                <i class="fa fa-calendar"></i>
                                <span>@DateTime.Now.ToLongDateString()</span>                           
                            </div>
                        </li>              
                    </ul>
                </div>
            </div>  
           
        </section>
        <section class="content">
           @* <div>      
                <span class="btn btn-default" style="float:left;font-weight:200; cursor:pointer" "tooltip" title = "Click here to add new company">@Html.ActionLink("Add New Company", "Create")</span>
            </div>   
            *@
            
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
              
                            <div class="box-body">
                           
                                <table id="CompanyMaster" class="table table-bordered table-striped">  @*Added by Pushkar For datatable on 25 OCT 2016*@
                                    <thead>
    <tr>
        <th></th>
        <th>
            Scheduler Name
        </th>
        <th>
            Description
        </th>
        <th>
            Schedule Type
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
        <th>
            Frequency In Min
        </th>
        <th>
            Repeat Cycle
        </th>
   </tr>
                                    </thead>
                                    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ScheduleId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ScheduleId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ScheduleId })
        </td>
        <td>
            @item.SchedularName
        </td>
        <td>
            @item.Description
        </td>
        <td>
            @item.ScheduleType
        </td>
        <td>
            @item.StartTime.Value.ToString("HH:mm:ss")
        </td>
        <td>
        @item.EndTime.Value.ToString("HH:mm:ss")
          
        </td>
        <td>
            @item.FrequencyInMin
        </td>
        <td>
            @item.RepeatCycle
        </td>
    </tr>
}
</tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>                    
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
    </div>
</div>
