@model WetosDB.Notification
@{
    WetosDB.Employee emp = new WetosDB.Employee();
    emp = @ViewBag.msgFrom;
         
}


@try
{
     
    
    <div class="portlet box green ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Message Details
            </div>
        </div>

        <div class="portlet-body">
            <div class="messageHeader seven_col last_col" id="messagedetail">
                <div class="message_date" id="message_date">
                    <b>Date:</b> @String.Format("{0:dd-MM-yyyy}", Model.SendDate)
                </div>

                <div class="message_from" id="message_from">
                    <b>From:</b>
                    <text> @emp.Title @emp.FirstName @emp.MiddleName @emp.LastName </text>
                </div>

                

                <div class="message_subject" id="message_subject">
                    <b>Content:</b> @Html.Raw(@Model.NotificationContent)
                </div>

            </div>
            <hr />
            <div id="message_content" class="scroller" style="overflow-y: auto; height: 290px;">
                @Html.Raw(@Model.NotificationContent)
            </div>
        </div>
    </div>


}
catch (Exception e)
{

}
