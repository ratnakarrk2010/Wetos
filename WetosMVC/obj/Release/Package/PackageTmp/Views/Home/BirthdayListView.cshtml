                <div class="row" style="padding-left: 0px; padding-right: 0px;">

                 @if (item.Picture != null)
                 {
                                    <img src="@Url.Action("getImg", "Account", new { id = @item.EmployeeId })"  height="120" width="120" alt="Person Image" />
                 }
                 else
                 {
                     //ADDED CODE BY SHRADDHA FOR GETTING GENDER WISE PROFILE PICTURE START
                     if (item.Gender == "Female" || item.Gender == "F")
                     {
                                        <img src="@Url.Content("~/images/UserImageGirl.jpg")"  height="120" width="120" alt="Person Image"  />
                     }
                     else
                     {
