@Html.DropDownList("Branch", null, new { @class = "form-control", @data_val = "true", @data_val_required = "Required" })
<script type="text/javascript">
    $('#Branch').change(function () {
       // alert();
        $("#div_buttons").hide();
        $.ajax({
            url: '@Url.Content("~/AssignRule/EmployeeGroupList")',
            data: JSON.stringify({ CompanyId: $('#Company').val(), BranchId: $('#Branch').val() }),
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            success: function (result) {
                $('#EmployeeGroupList').html(result.EmployeeGroup);
            },
            error: function (result) {
                // alert("No data Available");
            }
        });

    });

  
</script>
