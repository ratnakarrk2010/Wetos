                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header"></div>
                            <div class="box-body">
                                <div class="table-responsive">

                                    <table id="RoleMaster" class="table table-bordered table-striped">
                                        @*Added by Pushkar For datatable on 25 OCT 2016*@
                                        <thead>
                                            <tr>

                                                <td>
                                                    Role Name
                                                </td>
                                                <td>
                                                    Role Description
                                                </td>
                                                <td>Action</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>

                                                    <td>
                                                        <a href="@Url.Action("Details", "WetosRole", new { id = item.RoleId })" style="cursor:pointer; float:left" title="Click to view Role details" />
                                                        @Html.DisplayFor(modelItem => item.RoleName)
                                                    </td>
                                                    <td>
                                                        @item.RoleDescription
                                                    </td>
                                                    <td>

                                                        <span data-toggle="tooltip" title="Edit">
                                                            @Html.ActionLink(" ", "Edit", new { id = item.RoleId }, new { @class = "fa fa-pencil-square-o" })
                                                        </span> |
                                                        @*@Html.ActionLink("Details", "Details", new { id = item.CompanyId }) |*@
                                                        <span data-toggle="tooltip" title="Delete">
                                                            @Html.ActionLink(" ", "Delete", new { id = item.RoleId }, new { @class = "fa fa-trash" })
                                                        </span>

                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot></tfoot>
                                    </table>
                                </div>
                            </div>
