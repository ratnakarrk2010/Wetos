    $(document).ready(function () {
        $('.back').click(function () {
            parent.history.back();
            return false;
        });
    });

    function goBack() {
        window.history.back();
    }

    //ADDED CODE BY RAJAS ON 29 MARCH 2017 FOR ALERT POPUP START
    $("#DeleteDeptBtn").click(function () {

        var $form = $(this).closest('form');
        $('#Deptdiv').modal({ backdrop: 'static', keyboard: false })
                .one('click', '#DeleteDept', function () {

                    $("#DeleteDeptForm").submit();
                });

    });
