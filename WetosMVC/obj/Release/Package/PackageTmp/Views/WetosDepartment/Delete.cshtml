@model WetosDB.VwDepartmentDetail
@{
    ViewBag.Title = "WetosMVC";
}
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">
            <h1>Department Master
                <small>Details</small>
            </h1>
               <div class="row">
                <div class="col-md-12">
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="@Url.Action("Index", "Home")">Home </a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                         <a href="#">Masters</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "WetosDepartment")">Department </a>
                        </li>
                        <li class="pull-right">
                            <div id="dashboard-report"  data-toggle="tooltip" title="Today's date">
                                <span style="cursor:pointer" class="back "  data-toggle="tooltip" title="Back"id="goback"><i class="fa fa-arrow-left"></i></span>
                                <i class="fa fa-calendar"></i>
                                <span>@DateTime.Now.ToLongDateString()</span>                           
                            </div>
                        </li>              
                    </ul>
                </div>
            </div>  
      <div style="clear: both;"></div>

       @*Added by Pushkar For back breadcrumb on 24 OCT 2016-----------End*@

      </section>
        <section class="content">
      <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-12">
      <div class="box">
            <div class="box-header">
              
            </div>
            <!-- /.box-header -->
            <div class="box-body">
            @using (Html.BeginForm("Delete", "WetosDepartment", FormMethod.Post, new { id = "DeleteDeptForm" }))
            {
    <div style="color: Red; font-size: 12px">
    @Html.ValidationSummary(true)
    </div>

 <div class="row">
    <div class="display-label col-md-4">Department Name</div>
    <div class="display-field col-md-8">@Model.DepartmentName</div>
     </div> 

        <br />
     <div class="row">
    <div class="display-label col-md-4">Department Code</div>
    <div class="display-field col-md-8">@Model.DepartmentCode</div>
     </div> 

        <br />
     <div class="row">
     <div class="display-label col-md-4">Branch</div>
    <div class="display-field col-md-8">@Model.BranchName</div>
     </div> 

        <br />
     <div class="row">
      <div class="display-label col-md-4">Company</div>
    <div class="display-field col-md-8">@Model.CompanyName</div>
     </div> 

        <br />

<p>
   <input type="button" id="DeleteDeptBtn" value="Delete" class="btn btn-default" style="cursor:pointer; float:left" title = "Click to delete department"/>
   <span  class="btn btn-default" style="cursor:pointer; float:left; margin-left:10px" title = "Click to go back to department list">@Html.ActionLink("Back to Department list", "Index")</span>
 </p>


            <!-- /.box-body -->
            }
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    </div>
</div>
