<script type="text/javascript">
    $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();
    });

    
    
</script>
<script type="text/jscript">
    $(document).ready(function () {
        $('.back').click(function () {
            parent.history.back();
            return false;
        });
        $('[data-toggle="tooltip"]').tooltip();
    });

    function goBack() {
        window.history.back();
    }


    $("#Branchbtn").click(function () {

        var $form = $(this).closest('form');
        $('#branchdiv').modal({ backdrop: 'static', keyboard: false })
                .one('click', '#DeleteBtn', function () {



                    $("#CreateBranchForm").submit();
                });

    });

    //ADDED BY NANDINI ON 02 MAY 2020
    $("input:radio[name=opt]").click(function () {

        if ($(this).val() == "ParentWise") {
            $(".SelectParentId").show();
            $(".ExTypeId").hide();
            $(".TypeIdValue").show();


        } else {
            $(".SelectParentId").show();
            $(".ExTypeId").show();
            $(".TypeIdValue").hide();



        }
    });

    //ADDED BY NANDINI ON 02 MAY 2020
    $("#TypeNameID").change(function () {
       // alert("1");
        // showloading();
        var TypeNameID = $("#TypeNameID").val();

       // alert(TypeNameID);

        $.ajax({
            url: '@Url.Content("~/DropdownData/ExistingDataDetails")',
            data: { TypeNameID: TypeNameID },
            type: 'POST',
            success: function (msg) {

                $("#TypeId").val(msg.TypeId);
                $("#TypeName").val(msg.Type);
                hideloading();
            },
            error: function (xhr) {
                //alert(xhr);
                alert("something seems wrong");
            }
        });


    });

</script>
