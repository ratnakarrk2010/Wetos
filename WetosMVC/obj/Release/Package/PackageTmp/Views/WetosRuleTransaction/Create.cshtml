<script type="text/javascript">

    // Added by Rajas on 27 DEC 2016 to fill drop down list on selection of other drop down
    // Fill details on view on selection of Rule
    $("#Rule").change(function () {
        //alert($("#Application_ID").val());
        isDirty = false;
        var Ruleid = $("#Rule").val();

        $.ajax({
            url: '@Url.Content("~/WetosRuleTransaction/GetRule")',
            type: "POST",
            dataType: "json",
            data: { Ruleid: Ruleid },
            success: function (data) {

                $("#Company").empty();
                $("#Branch").empty();

                $("#Formula").empty();
                $("#SubCode").empty();
                $("#HeadCode").empty();
                $("#Active").empty();

                for (var i = 0; i < data.length; i++) {

                    //alert(states[i].Group_name);
                    // states.option.selected = true;
                    $("#Company").append("<option value=" + "" + data[i].CompanyId + "" + ">" + data[i].CompanyName + "</option>");
                    $("#Branch").append("<option value=" + "" + data[i].BranchId + "" + ">" + data[i].BranchName + "</option>");

                    $("#HeadCode").val(data[i].HeadCode);
                    $("#SubCode").val(data[i].SubCode);
                    $("#Active").val(data[i].Active);
                    $("#Formula").val(data[i].Formula);

                }

            },
            error: function (data) {
                //alert("hello");
            }
        });
    });

    // MULTIPLE SELECTION SELECT2
    // Added by Rajas on 21 APRIL 2017 START
    $(".multiselect").select2();
    $("#checkbox").click(function () {
        //alert(multiselect);
        if ($("#checkbox").is(':checked')) {
            $(".multiselect > option").prop("selected", "selected");
            $(".multiselect").trigger("change");
        }
        else {
            //alert(multiselect);
            $(".multiselect > option").removeAttr("selected");
            $(".multiselect").trigger("change");
        }
    });
    // Added by Rajas on 21 APRIL 2017 END
</script>
