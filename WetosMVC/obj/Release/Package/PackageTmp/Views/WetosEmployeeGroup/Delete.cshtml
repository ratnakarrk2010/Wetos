@model WetosDB.VwEmployeeGroupDetail
@{
    ViewBag.Title = "Details";
}
<div class="page-content-wrapper" id="page_content">
    <div class="page-content">
        <section class="content-header">
<h1>Employee Group
<small>Details</small>
</h1>
<div class="row">
                <div class="col-md-12">
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="@Url.Action("Index", "Home")">Home</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                         <a href="#">Masters</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "WetosEmployeeGroup")">Employee Group </a>
                        </li>
                        <li class="pull-right">
                            <div id="dashboard-report"  data-toggle="tooltip" title="Today's date">
                                <span style="cursor:pointer" class="back "  data-toggle="tooltip" title="Back" id="goback"><i class="fa fa-arrow-left"></i></span>
                                <i class="fa fa-calendar"></i>
                                <span>@DateTime.Now.ToLongDateString()</span>                           
                            </div>
                        </li>              
                    </ul>
                </div>
            </div>  
    <div style="clear: both;">
    </div>
       </section>
        <section class="content">
      <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-12">
      <div class="box">
            <div class="box-header">
              
            </div>
            <!-- /.box-header -->
            <div class="box-body">

    @using (Html.BeginForm("Delete", "WetosEmployeeGroup", FormMethod.Post, new { id = "Form" }))
    {
    <div style="color: Red; font-size: 12px">
    @Html.ValidationSummary(true)
    </div>

      <div class="row">
    <div class="display-label col-md-4">Employee Group Name</div>
    <div class="display-field col-md-8">@Model.EmployeeGroupName</div>
      </div> 

        <br />
    
      <div class="row">
    <div class="display-label col-md-4">Branch Name</div>
    <div class="display-field col-md-8">@Model.BranchName</div>
     </div> 

        <br />
  <div class="row">
    <div class="display-label col-md-4">Company Name</div>
    <div class="display-field col-md-8">@Model.CompanyName</div>
      </div> 

        <br />
        <p>
        <input type="button" id="DeleteBtn" value="Delete" style="cursor:pointer; float:left" title = "Click to Delete Employee group" class="btn btn-default" />
             <span  class="btn btn-default" style="cursor:pointer; float:left; margin-left:10px" title = "Click to go back to employee group list">@Html.ActionLink("Back to Employee group list", "Index")</span>
             </p>
    }
</div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    </div>
</div>
