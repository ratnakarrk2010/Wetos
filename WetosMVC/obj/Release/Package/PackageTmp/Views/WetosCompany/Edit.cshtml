<script type="text/javascript">
    $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();


    });

</script>
@*Added by Pushkar For back breadcrumb on 24 OCT 2016-------start*@
<script type="text/jscript">
    $(document).ready(function () {
        $('.back').click(function () {
            parent.history.back();
            return false;
        });
    });

    function goBack() {
        window.history.back();
    }

    //ADDED CODE BY SHRADDHA ON 02 MARCH 2017 FOR ALERT POPUP START
    $("#EditCompanyBtn").click(function () {

        var $form = $(this).closest('form');
        $('#Companydiv').modal({ backdrop: 'static', keyboard: false })
            .one('click', '#EditCompanybtn', function () {

                $("#EditCompanyForm").submit();
            });

    });
    //ADDED CODE BY SHRADDHA ON 02 MARCH 2017 FOR ALERT POPUP END


</script>
