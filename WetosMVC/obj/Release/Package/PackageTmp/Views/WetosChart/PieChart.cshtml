@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pie Charts</title>@*PieChart Local script*@
    <script src="../../Scripts/PieChartData.js" type="text/javascript"></script>
    <script type="text/javascript" src="../../Scripts/jquery-1.8.2.js"></script>
</head>
<body>
    <div style="text-align: center">
        <canvas id="Piecanvas"></canvas>
    </div>
    <div style="text-align: center">
        Disclaimer:- This data is for demo it is not real data it wont relate to any company
    </div>
</body>
<script type="text/javascript">
    $(document).ready(function () {
        var ctx1 = document.getElementById("Piecanvas").getContext("2d");
        window.myBar = new Chart(ctx1,
                    {
                        type: 'pie',
                        data: PieChartData,
                        options:
                            {
                                title:
                                {
                                    display: true,
                                    text: "ProductWise Sales Count"
                                },
                                responsive: true,
                                maintainAspectRatio: true
                            }
                    });

    });
</script>
<script type="text/javascript">
   var PieChartData =
            {
                labels: [@Html.Raw(ViewBag.Productname_List)],
                datasets: [{
                    label: 'ProductWise Sales Count',
                    backgroundColor: [
                        "#f990a7",
                        "#aad2ed",
                        "#9966FF",
                        "#99e5e5",
                        "#f7bd83",
                    ],
                    borderWidth: 2,
                    data: [@ViewBag.MobileCount_List]
                }]
            };
</script>
</script> </head>
</html>
