    function CalculateDays(id, compoffid) {
        //alert(id);
        var PreviousValue = +$("#TtlAllwdDys").val();
        var xyz = document.getElementById(compoffid);
        var BalanceCoHours = document.getElementById("BalanceCoHours_+" + id).value;

