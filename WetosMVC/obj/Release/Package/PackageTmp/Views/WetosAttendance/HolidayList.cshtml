<section class="content">
    <div class="row">
      
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Index</h3>
                </div>
                <div class="box-body">
                 
                    @* <span style="float:left">@Html.ActionLink("Export To PDF", "ExportDatatoPDF")</span>*@
                    <table id="HolidayList" class="table table-bordered table-striped">
                    <thead>
    <tr>
       
        <td> 
            HLType
        </td> 
        @*<td> 
            EmployeeId
        </td> 
        <td> 
            ReligionId
        </td> *@
        <td> 
            From Date
        </td> 
        <td> 
            To Date
        </td> 
        @*<td> 
            Criteria
        </td> *@
        <td> 
            Description
        </td> 
        @*<td> 
            DayStatus
        </td> 
        <td> 
            CompanyId
        </td> 
        <td> 
            Branchid
        </td> *@
         <td> </td> 
    </tr>
      </thead>
                        <tbody>
@foreach (var item in Model)
{
    <tr>
       
        <td>
            @item.HLType
        </td>
       @* <td>
            @item.EmployeeId
        </td>
        <td>
            @item.ReligionId
        </td>*@
        <td>
            @String.Format("{0:g}", item.FromDate.ToString("dd-MMM-yyyy"))
        </td>
        <td>
            @String.Format("{0:g}", item.ToDate.ToString("dd-MMM-yyyy"))
        </td>
       @* <td>
            @item.Criteria
        </td>*@
        <td>
            @item.Description
        </td>
       @* <td>
            @item.DayStatus
        </td>
        <td>
            @item.CompanyId
        </td>
        <td>
            @item.Branchid
        </td>*@
         <td>
            @Html.ActionLink("Edit", "HolidayEdit", new { id = item.HoliDayId })
           
        </td>
    </tr>
}
 </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                        <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </div>
    <!-- /.box -->

    <!-- /.row -->
</section>
