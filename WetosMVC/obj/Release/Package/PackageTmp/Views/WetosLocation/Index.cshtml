        <section class="content">
       
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            
            <div class="box-body">
<table id="LocationMaster" class="table table-bordered table-striped">  @*Added by Pushkar For datatable on 25 OCT 2016*@

<thead>

    <tr>
      <td>
            Location Name
        </td>
        <td>
            Address
        </td>
        <td>
            City
        </td>
          <td  align="center">Action</td>
    </tr>

    </thead>

    <tbody>

@foreach (var item in Model)
{
    <tr>
        
        <td>
        <a href="@Url.Action("Details", "WetosLocation", new { id = item.LocationId })" style="cursor:pointer; float:left" title = "Click to check location details">
            @item.LocationName</a>
        </td>
        <td>
            @item.Address
        </td>
        <td>
            @item.City
        </td>
        <td align="center">
           

             <span data-toggle="tooltip" title="Edit">
                                                @Html.ActionLink(" ", "Edit", new { id = item.LocationId }, new { @class = "fa fa-pencil-square-o" })</span> |
                                                @*@Html.ActionLink("Details", "Details", new { id = item.CompanyId }) |*@
                                                <span data-toggle="tooltip" title="Delete">
                                                @Html.ActionLink(" ", "Delete", new { id = item.LocationId }, new { @class = "fa fa-trash" })
                                                </span>
           
        </td>
    </tr>
}
</tbody>

<tfoot>
                
                </tfoot>

</table>

</div>
