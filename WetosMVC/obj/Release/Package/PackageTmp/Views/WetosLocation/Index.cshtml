                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                         <a href="#">Masters</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "WetosLocation")">Location</a>
                        </li>
                        <li class="pull-right">
                            <div id="dashboard-report" class="dashboard-date"  data-toggle="tooltip" title="Today's date">
