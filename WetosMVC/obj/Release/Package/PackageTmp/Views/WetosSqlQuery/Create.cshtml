                <div class="col-xs-12 col-md-12 col-lg-12">

                    <div class="box">
                    
                        <!-- /.box-header -->
                        <div class="box-body">
                       
                            @using (Html.BeginForm("Create", "WetosSqlQuery", FormMethod.Post, new { id = "AddCompanyForm", enctype = "multipart/form-data" }))
                            {
                          
                                 <div style="color: Red; font-size: 12px">
                                    @Html.ValidationSummary(true)
                                </div>


                                <div style="color: Red; font-size: 12px">
                                    @Html.ValidationMessage("Error")
                                </div>
        
                                <div class="row">
                                    <div class="editor-label col-md-2">
                                        Sql Query Name   <span style="color: Red; font-size: 18px">*</span>
                                    </div>
                                    <div class="editor-field col-md-5">
                                   
                                    <div class="input-group date">
                                       <div class="input-group-addon">
                                        <i  class="fa fa-map-marker"></i>
                                        </div> 
                                      
                                       @Html.TextAreaFor(model => model.SqlQueryName, new { @class = "form-control", @style = "width:250px" })
                                       
                                        </div>
                                         
                                           <div  style="color: Red; font-size: 12px">
                                        @Html.ValidationMessageFor(model => model.SqlQueryName)
                                        </div>

                                        </div>
                                </div>
                              
                                <div class="row">
                                    <div class="form-group">
                                        <div class="editor-label col-md-2">
                                            Sql Query Description <span style="color: Red; font-size: 18px">*</span>
                                        </div>
                                        <div class="editor-field col-md-5">
                                      
                                        <div class="input-group date">
                                       <div class="input-group-addon">
                                        <i class="fa fa-suitcase" aria-hidden="true"></i>
                                        </div> 

                                            @Html.TextAreaFor(model => model.SqlQueryDescription, new { @class = "form-control", @style = "width:250px" })
                                            </div>
                                         
                                           <div style="color: Red; font-size: 12px">
                                                @Html.ValidationMessageFor(model => model.SqlQueryDescription)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                               
                                <div class="row">
                                    <div class="editor-label col-md-2">
                                        Sql Query <span style="color: Red; font-size: 18px">*</span>
                                    </div>
                                    <div class="editor-field col-md-5">
                                     
                                        <div class="input-group date">
                                       <div class="input-group-addon">
                                       <i class="fa fa-building-o" aria-hidden="true"></i>
                                        </div> 

                                       @Html.TextAreaFor(model => model.SqlQuery, new { @class = "form-control", @style = "width:250px" })
                                       
                                        </div>
                                         <div  style="color: Red; font-size: 12px">
                                            @Html.ValidationMessageFor(model => model.SqlQuery)
                                        </div>
                                       
                                    </div>
                                </div>
                               
                               
                             
                                <p>
                                    <input id="CreateCompanyBtn" type="button" value="Save" class="btn btn-default" style="cursor:pointer; float:left" title = "Click to save ROI"/>
                                     <span  class="btn btn-default" style="cursor:pointer; float:left; margin-left:10px" title = "Click to go back to SQL List">@Html.ActionLink("Back to SQL Query List", "Index")</span>
